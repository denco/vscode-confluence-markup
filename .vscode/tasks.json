// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "watch",
            "dependsOn": [
                "npm: watch",
                "npm: syntax-watch"
            ],
            "dependsOrder": "sequence",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "npm",
            "script": "watch",
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "presentation": {
                "reveal": "never"
            },
            "group": {
                "kind": "build"
            }
        },
        {
            "type": "npm",
            "script": "syntax-watch",
            "isBackground": true,
            "presentation": {
                "reveal": "never"
            },
            "group": {
                "kind": "build"
            },
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": "^(\\w+): (\\w+) - (.*)^",
                            "file": 3,
                            "location": 1,
                            "message": 2
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "^Start: watching - .*",
                        "endsPattern": "^Success: syntax converted - .*"
                    }
                }
            ]
        },
        {
            "type": "npm",
            "script": "test",
            "problemMatcher": []
        },
        {
            "type": "npm",
            "script": "compile",
            "problemMatcher": []
        },
        {
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "option": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ]
        }
    ]
}
